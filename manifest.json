{
  "manifest_version": 2,
  "name": "AutoVideoPauser",
  "version": "1.1",
  "description": "Automaticity pause a video when you switch to another tab.",
  "icons": {
    "256": "img/off.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/on.png",
    "default_title": "Disable autopause"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}